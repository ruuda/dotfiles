{
  // Turn off AI stuff that I don't need.
  "disable_ai": true,

  "theme": "One Dark",
  "vim_mode": true,
  "helix_mode": true,

  "wrap_guides": [80, 100],
  "preferred_line_length": 80,

  "ui_font_size": 16,
  "ui_font_family": "Cantarell",
  "buffer_font_size": 14,
  "buffer_font_family": "Intel One Mono",

  "autosave": "on_focus_change",
  "format_on_save": "off",
  "remove_trailing_whitespace_on_save": true,
  "soft_wrap": "none",

  "tabs": {
    "git_status": true,
  },

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "auto_update": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "languages": {
    "Python": {
      // Disable stuff that runs untrusted javascript outside of a browser, and
      // creates weird .ropeproject directories that I never consented to.
      // See also https://github.com/zed-industries/zed/discussions/21163#discussioncomment-11373808.
      "language_servers": ["!pylsp"]
    }
  }
}
