{
  // Turn off AI stuff that I don't need.
  "features": {
    "copilot": false
  },
  "assistant": {
    "version": "2",
    "enabled": false
  },

  "theme": "Gruvbox Dark",
  "vim_mode": true,

  "wrap_guides": [80, 100],
  "preferred_line_length": 80,

  "ui_font_size": 14,
  "ui_font_family": "Cantarell",
  "buffer_font_size": 14,
  "buffer_font_family": "Intel One Mono",

  "autosave": "on_focus_change",
  "format_on_save": "off",
  "remove_trailing_whitespace_on_save": true,
  "soft_wrap": "none",

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "auto_update": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
